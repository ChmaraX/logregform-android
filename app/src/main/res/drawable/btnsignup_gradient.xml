<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item>
        <shape>
            <gradient

                android:startColor="#69f8e4"
                android:endColor="#0575E6"
                android:angle="0" />

            <stroke
                android:width="1dp"
                android:color="0575E6" />

            <corners
                android:radius="4dp" />

            <padding
                android:right="10dp"
                android:top="10dp"
                android:bottom="10dp"
                android:left="10dp" />

        </shape>
    </item>

    <item android:state_pressed="true">
        <shape>
            <solid>
                android:color="0575E6"

                <stroke
                    android:width="1dp"
                    android:color="69f8e4" />

                <corners
                    android:radius="4dp" />

                <padding
                    android:right="10dp"
                    android:top="10dp"
                    android:bottom="10dp"
                    android:left="10dp" />

            </solid>
        </shape>
    </item>

</selector>